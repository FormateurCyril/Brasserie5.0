<div class="col-md-4 mt-3">
    <div class="card">
        {% if product.filename is empty %}
            <img src="{{ asset('images/empty.jpg') }}" alt="" class="card-img-top img-fluid">
        {% else %}
            <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="" class="card-img-top img-fluid">
        {% endif %}
        <div class="card-body">
            <h4 class="card-header">
                <a href="{{ path('product.show', {'slug': product.slug ,'id': product.id}) }}">
                    {{ product.name }}
                </a>
            </h4>
            <p class="card-text">
                {{ product.description }}
            </p>
            <p class="text-right">
                <strong>{{ product.price|number_format(2, ',', '.') }}â‚¬</strong>
            </p>
        </div>
    </div>
</div>
